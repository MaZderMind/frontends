%ul.sections
  - @config[:rooms].each do |room|
    - if @item[:title] =~ /#{room}/
      %li.selected
    - else
      %li
    %a{ href: "/#{room.gsub('/', '').downcase}/", }= room
    %ul
      %li.theora
        %a{ href: "/formats/theora/#{room.gsub('/', '').downcase}/"} theora
      -# %li.rtmp
      -#   %a{ href: "/formats/rtmp/#{room.gsub('/', '').downcase}/"} rtmp
      -# %li.hls
      -#   %a{ href: "/formats/hls/#{room.gsub('/', '').downcase}/"} hls
      %li.audio
        %a{ href: "/formats/audio/#{room.gsub('/', '').downcase}/"} audio

  - if @item[:title] =~ /Winkekatze/
    %li.selected
      %a{ href: "/formats/theora/winkekatze/"} Winkekatze
  - else
    %li
      %a{ href: "/formats/theora/winkekatze/"} Winkekatze
